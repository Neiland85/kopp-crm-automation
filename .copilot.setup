scopes:
  - "**/*.ts"
  - "**/*.js" 
  - "**/*.json"
  - "**/*.yaml"
  - "**/*.yml"
  - "**/*.md"
  - "**/*.sh"
  - "src/zapier/**/*"
  - ".github/workflows/*"

linters:
  eslint: true
  yamllint: true
  markdownlint: true
  
formatters:
  prettier: true
  
testFrameworks:
  jest: true
  
features:
  enableIntrospection: true  # ADR-ZAP-01 requiere introspecci√≥n de flujos
  enableCodeReview: true
