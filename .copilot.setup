  enableInlineSuggestions: true
  
integrations:
  slack: true
  zapier: true  
  hubspot: true
  notion: false  # opcional
  
optimization:
  prioritizeLocalDevelopment: true
  minimizeAPICallsInCI: true
  enableCostOptimization: true
  
skipPaths:
  - "node_modules"
  - ".git"
  - "dist"
  - "coverage"
  - "logs"
  - "*.log"
  
