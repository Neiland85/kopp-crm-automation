root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,ts,json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.env*]
insert_final_newline = false
