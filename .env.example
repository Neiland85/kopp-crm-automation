# Kopp CRM Automation - Environment Variables

# HubSpot Configuration
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_PORTAL_ID=your-portal-id-here
HUBSPOT_ACCESS_TOKEN=your-access-token-here

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Firebase Configuration
FIREBASE_PROJECT_ID=kopp-stadium-crm
FIREBASE_CLIENT_EMAIL=your-service-account-email@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key-here
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-domain.firebaseapp.com","projectId":"your-project-id"}

# Zapier Configuration (para migración gradual)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-url
ZAPIER_API_KEY=your-zapier-api-key-here

# Google Sheets Configuration (for Zapier CLI integration)
GOOGLE_ACCESS_TOKEN=your-google-oauth2-access-token
GOOGLE_SPREADSHEET_ID=your-google-spreadsheet-id-with-lead-scoring-sheet
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REFRESH_TOKEN=your-google-oauth-refresh-token

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token-here
VERCEL_PROJECT_ID=your-vercel-project-id

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (if using external DB)
DATABASE_URL=your-database-connection-string
REDIS_URL=your-redis-connection-string

# API Keys for external services
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Google Sheets Configuration (for Lead Scoring Integration)
GOOGLE_ACCESS_TOKEN=your-google-oauth2-access-token
GOOGLE_SPREADSHEET_ID=your-google-spreadsheet-id-with-lead-scoring-sheet
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REFRESH_TOKEN=your-google-oauth-refresh-token

# Reputómetro Invisible Configuration
REPUTOMETRO_ENABLED=true
REPUTOMETRO_CRON_SCHEDULE=*/5 * * * *
REPUTOMETRO_TIMEZONE=America/Mexico_City
REPUTOMETRO_LOG_LEVEL=info

# Hot Leads Configuration
HOT_LEADS_ENABLED=true
HOT_LEAD_THRESHOLD=40

# Dropout Positivo Configuration
DROPOUT_POSITIVO_ENABLED=true
DROPOUT_THRESHOLD_DAYS=7
DROPOUT_SCORE_BOOST=30

# Daily Report Configuration
DAILY_REPORT_ENABLED=true
DAILY_REPORT_TIMEZONE=Europe/Madrid

# Recompensas por Escasez Configuration
RECOMPENSAS_ESCASEZ_ENABLED=true
STOCK_THRESHOLD=20
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
GOOGLE_SHEETS_ID=your-google-spreadsheet-id

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Webhook Endpoints
WEBHOOK_SECRET=your-webhook-secret-here
CALLBACK_URL=https://your-domain.com/callback
