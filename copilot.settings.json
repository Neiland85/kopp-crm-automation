{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "markdown": true,
    "typescript": true,
    "javascript": true,
    "json": true,
    "shellscript": true
  },
  "copilot.experimental.inlineSuggest.enable": true,
  "copilot.experimental.introspection.enable": true,
  "copilot.experimental.codeActions.enable": true,
  "copilot.experimental.conversation.enable": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "eslint.validate": ["javascript", "typescript", "yaml", "json"],
  "hubspot.devtools.enable": true,
  "hubspot.devtools.apiKey": "${env:HUBSPOT_API_KEY}",
  "slack.workspaceToken": "${env:SLACK_BOT_TOKEN}",
  "zapier.enable": true,
  "zapier.apiKey": "${env:ZAPIER_API_KEY}",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-src-file"
  },
  "files.associations": {
    "*.zapierapprc": "json",
    ".copilot.setup": "yaml",
    "*.env.*": "properties"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  "prettier.configPath": ".prettierrc",
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.git": true,
    "**/logs": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  }
}
