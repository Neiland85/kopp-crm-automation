{
  "name": "kopp-crm-automation",
  "version": "1.0.0",
  "description": "Automatización estratégica de Slack y Hubspot para Kopp Stadium con integración futura a Firebase, reemplazo progresivo de Zapier y despliegue en Vercel.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-assets",
    "build:production": "NODE_ENV=production tsc --build tsconfig.json && npm run copy-assets",
    "copy-assets": "cp -r config/ dist/ && cp .env.example dist/",
    "deploy": "npm run build && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:staging": "vercel --target staging",
    "deploy:preview": "vercel",
    "production:setup": "npm run build:production && npm run test:ci",
    "production:deploy": "npm run production:setup && npm run deploy:production",
    "production:health": "curl https://kopp-crm-automation.vercel.app/health",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "lint:check": "eslint \"src/**/*.{js,ts}\"",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:slack-report": "npm run test:coverage && node scripts/slackTestReport.js",
    "test:ci": "npm run lint:check && npm run type-check && npm run test:coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "qa:local": "npm run test:ci && npm run build",
    "qa:staging": "NODE_ENV=staging npm run test:integration && npm run test:e2e",
    "qa:report": "node scripts/qaReport.js",
    "github:setup-webhook": "node scripts/githubSlackNotifier.js setup",
    "github:setup-secrets": "bash scripts/setup-secrets.sh",
    "github:verify-secrets": "bash scripts/setup-secrets.sh --verify",
    "github:list-secrets": "bash scripts/setup-secrets.sh --list",
    "coverage:badge": "bash scripts/generate-coverage-badge.sh",
    "coverage:open": "open coverage/lcov-report/index.html",
    "release:patch": "node scripts/releaseManager.js patch",
    "release:minor": "node scripts/releaseManager.js minor",
    "release:major": "node scripts/releaseManager.js major",
    "workflow:cleanup": "npm run clean && npm install && npm run setup:env",
    "pre-release": "npm run workflow:cleanup && npm run qa:local",
    "reputometro:test": "npm run build && node scripts/test-reputometro.js",
    "reputometro:logs": "tail -f logs/reputometro.log",
    "reputometro:validate": "npm run test -- tests/zaps/reputometro.test.ts",
    "hot-leads:test": "npm run build && node scripts/test-hot-leads.js",
    "hot-leads:logs": "tail -f logs/hot_leads.log",
    "hot-leads:validate": "npm run test -- tests/zaps/hot-leads/hot-leads.test.ts",
    "recompensas:test": "npm run build && node scripts/test-recompensas-escasez.js",
    "recompensas:logs": "tail -f logs/recompensas.log",
    "recompensas:validate": "npm run test -- tests/zaps/recompensas-escasez/recompensas-escasez.test.ts",
    "dropout:test": "npm run build && node scripts/test-dropout-positivo.js",
    "dropout:logs": "tail -f logs/dropout.log",
    "dropout:validate": "npm run test -- tests/zaps/dropout-positivo/dropout-positivo.test.ts",
    "daily-report:generate": "npm run build && node -e \"require('./dist/scripts/dailyReport').runManualReport()\"",
    "daily-report:start": "npm run build && node -e \"require('./dist/scripts/dailyReport').setupDailyReportCron()\"",
    "daily-report:logs": "ls -la reports/ && echo '--- Último reporte ---' && cat reports/$(ls -t reports/*.md | head -1)",
    "zaps:test-all": "npm run hot-leads:validate && npm run recompensas:validate && npm run reputometro:validate && npm run dropout:validate",
    "start": "node dist/index.js",
    "bootstrap:all": "echo \"Bootstrap Phase 0: Setting up project structure...\" && npm install",
    "configure:extensions": "node scripts/configureExtensions.js",
    "clean:extensions": "node scripts/cleanExtensions.js",
    "setup:env": "cp .env.example .env",
    "docs:generate": "typedoc src --out docs/api",
    "docs:swagger": "node test-swagger.js",
    "docs:open": "node scripts/open-swagger.js",
    "docs:validate": "npm run build && npm run docs:swagger",
    "clean": "rm -rf dist node_modules package-lock.json",
    "zapier:validate": "zapier validate",
    "zapier:test": "zapier test",
    "zapier:push": "zapier push",
    "zapier:promote": "zapier promote",
    "zapier:deploy": "./scripts/deploy-zapier.sh",
    "zapier:build": "npm run build && zapier validate",
    "zapier:logs": "zapier logs",
    "validate:local": "./scripts/local-validation.sh",
    "test:fast": "jest --bail --testTimeout=5000 --silent",
    "qa:minimal": "npm run lint:check --silent && npm run test:fast && npm run build --silent",
    "pre-commit": "npm run validate:local",
    "setup:integrations": "./scripts/setup-integrations.sh",
    "setup:slack": "./scripts/setup-slack.sh",
    "setup:zapier": "./scripts/setup-zapier.sh",
    "setup:hubspot": "./scripts/setup-hubspot.sh",
    "setup:notion": "./scripts/setup-notion.sh",
    "setup:all": "npm run setup:integrations",
    "slack:test": "node scripts/slack-test.js",
    "slack:test:simple": "node scripts/slack-test.js simple",
    "slack:test:full": "node scripts/slack-test.js comprehensive",
    "setup:vscode": "./scripts/setup-vscode-extensions.sh",
    "setup:phase1": "./scripts/setup-phase1-complete.sh",
    "clean:env": "./scripts/setup-clean-environment.sh",
    "clean:lockfile": "rm -f package-lock.json yarn.lock && npm install",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "format:all": "prettier --write '**/*.{ts,js,json,yaml,yml,md}' --ignore-path .gitignore",
    "prepare": "husky install",
    "security:scan": "npm audit --audit-level moderate",
    "security:fix": "npm audit --fix",
    "security:report": "node scripts/security-report.js"
  },
  "keywords": [
    "slack",
    "hubspot",
    "automation",
    "zapier",
    "crm",
    "kopp-stadium"
  ],
  "author": "Kopp Stadium Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.0.0",
    "@types/chai": "5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/mocha": "10.0.10",
    "@types/nock": "10.0.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "chai": "5.2.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-security": "3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-junit": "16.0.0",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "mocha": "11.7.1",
    "nock": "14.0.5",
    "pre-commit": "^1.0.10",
    "prettier": "^3.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vercel": "^28.18.5",
    "zapier-platform-cli": "^17.2.0"
  },
  "dependencies": {
    "@hubspot/api-client": "^12.0.0",
    "@octokit/plugin-paginate-rest": "^13.1.1",
    "@octokit/request": "^10.0.3",
    "@octokit/request-error": "^7.0.0",
    "@slack/bolt": "^4.4.0",
    "@slack/web-api": "^7.9.3",
    "@types/cookie-parser": "1.4.9",
    "@types/crypto-js": "4.2.2",
    "@types/js-cookie": "3.0.6",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.10.0",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "cross-spawn": "^7.0.6",
    "crypto-js": "4.2.0",
    "dotenv": "^16.0.0",
    "estree-util-value-to-estree": "^3.4.0",
    "express": "^4.18.0",
    "firebase-admin": "^12.0.0",
    "js-cookie": "3.0.5",
    "node-cron": "^4.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.0",
    "zapier-platform-core": "^17.1.0"
  },
  "overrides": {
    "cross-spawn": "^7.0.6",
    "undici": "^6.0.0",
    "esbuild": "^0.24.0",
    "tar": "^6.2.1",
    "semver": "^7.6.0",
    "debug": "^4.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ],
    "*.{sh,bash}": [
      "chmod +x"
    ]
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}